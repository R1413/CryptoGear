<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jocundstudio.cryptogear.MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/crypto_logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:tint="#6d4242"
        android:background="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:textAlignment="center"
        android:id="@+id/Output"
        android:layout_above="@+id/saveSettings"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EnterUserName"
        android:hint="username"
        android:textAlignment="center"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_above="@+id/EnterPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/EnterPassword"
        android:layout_above="@+id/adjustFontSize"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:gravity="center"
        android:hint="password" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Clear Settings"
        android:id="@+id/clearSettings"
        android:backgroundTint="#6c5660"
        android:textColor="#ffffff"
        android:onClick="clearSettings"
        android:layout_below="@+id/saveSettings"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/Login"
        android:backgroundTint="#6c5660"
        android:textColor="#ffffff"
        android:onClick="userLogin"
        android:layout_below="@+id/SignUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adjustFontSize"
        android:indeterminate="false"
        android:layout_above="@+id/Output"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save Settings"
        android:id="@+id/saveSettings"
        android:backgroundTint="#6c5660"
        android:textColor="#ffffff"
        android:onClick="saveSettings"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginBottom="20dp"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/clearSettings">


    </RadioGroup>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/SignUp"
        android:backgroundTint="#6c5660"
        android:textColor="#ffffff"
        android:onClick="userLogin"
        android:layout_below="@+id/clearSettings"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EnterEmail"
        android:hint="username"
        android:textAlignment="center"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_above="@+id/EnterUserName"
        android:layout_centerHorizontal="true"
        android:text="email" />

</RelativeLayout>
